{
  "name": "lala-homes-be",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "npm run demigrate && npm run migrate && npm run seed:all && npx tsc && nodemon ./src/server.ts",
    "start": "node ./dist/server.js",
    "lint": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test-lint": "npm run lint && npm run format",
    "test": "jest --coverage",
    "demigrate": "npx sequelize db:migrate:undo:all",
    "migrate": "npx sequelize db:migrate",
    "seed:all": "npx sequelize db:seed:all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.4",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.24.0"
  }
}
